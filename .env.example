# =========================
# Database
# =========================
DB_PATH=./scanner.sqlite

# =========================
# Polling
# =========================
POLL_MS=30000

# =========================
# Trades API Pagination
# =========================
PAGE_SIZE=500
MAX_PAGES=500
OVERLAP_SEC=120   # 6h Overlap für Live-Polling

# =========================
# Filters / Scoring
# =========================
CASH_THRESHOLD=10000
MIN_OPEN_MINUTES=10

# =========================
# One-time Backfill
# =========================
# Anzahl Tage Historie, die EINMALIG
# bei leerer DB geladen werden
BACKFILL_DAYS=0

# =========================
# Discord
# =========================
DISCORD_TOKEN=replace_me
# Optional: wohin Alerts gehen sollen (User-ID für DMs)
DISCORD_ALERT_USER_ID=replace_me
